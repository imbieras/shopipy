@{
    ViewData["Title"] = "Counter";
}

<h1>Counter</h1>
<p role="status">Current count: <span id="currentCount">0</span></p>
<button class="btn btn-primary" onclick="incrementCount()">Click me</button>

<script>
    function incrementCount() {
        let currentCountElement = document.getElementById("currentCount");
        let currentCount = parseInt(currentCountElement.innerText);

        currentCount++;

        currentCountElement.innerText = currentCount.toString();
    }
</script>